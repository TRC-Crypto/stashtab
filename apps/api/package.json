{
  "name": "@stashtab/api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "build": "wrangler deploy --dry-run --outdir=dist",
    "deploy": "wrangler deploy",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:migrate": "wrangler d1 migrations apply stashtab-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply stashtab-db"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.4.1",
    "@hono/zod-validator": "^0.4.1",
    "@privy-io/server-auth": "^1.14.0",
    "@stashtab/config": "workspace:*",
    "@stashtab/sdk": "workspace:*",
    "hono": "^4.6.0",
    "viem": "^2.21.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241112.0",
    "@stashtab/eslint-config": "workspace:*",
    "eslint": "^8.57.0",
    "typescript": "^5.3.0",
    "wrangler": "^3.91.0"
  }
}
