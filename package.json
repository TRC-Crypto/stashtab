{
  "name": "stashtab",
  "version": "0.1.0",
  "private": false,
  "description": "Open source DeFi neobank stack - Deposit, earn, send on-chain",
  "repository": {
    "type": "git",
    "url": "https://github.com/TRC-Crypto/stashtab.git"
  },
  "license": "MIT",
  "packageManager": "pnpm@9.14.2",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "clean": "turbo clean && rm -rf node_modules",
    "setup": "tsx scripts/setup.ts",
    "setup:check": "tsx scripts/setup-check.ts",
    "deploy": "turbo build && pnpm --filter @stashtab/api exec wrangler deploy",
    "deploy:auto": "tsx scripts/deploy.ts",
    "create-template": "tsx scripts/create-template.ts",
    "backup-db": "tsx scripts/backup-db.ts",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@types/node": "^20.10.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "tsx": "^4.7.0",
    "turbo": "^2.3.0",
    "typescript": "^5.3.0",
    "vitest": "^2.1.0",
    "@playwright/test": "^1.40.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --ignore-path .eslintignore",
      "prettier --write"
    ],
    "*.{js,jsx,json,md,yaml,yml}": [
      "prettier --write"
    ]
  }
}
